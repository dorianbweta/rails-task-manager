<div class='d-flex justify-content-between align-items-center mb-4'>
  <h1><%= @task.title %></h1>
  <%= link_to edit_task_path(@task.id), class: 'btn btn-light btn-sm border' do %>
    <i class='fa fa-pencil'></i> Edit this task
  <% end %>
</div>

<p class='well'><%= @task.details %></p>

<% if @task.completed %>
  <i class='fa-regular fa-square-check'></i> This task is completed
<% else %>
  <i class='fa-regular fa-square'></i> This task is not completed yet
<% end %>

<hr>

<%= link_to tasks_path do %>
  <i class='fa-solid fa-arrow-rotate-left'></i> Back to list
<% end %>
